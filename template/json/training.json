{
  "type": "carousel",
  "contents": [
		{% for item in items %}
    {
			"type": "bubble",
			"header": {
				"type": "box",
				"layout": "vertical",
				"contents": [
					{
						"type": "text",
						"text": "{{item['tr_name']}}"
					}
				]
			},
		  "body": {
		    "type": "box",
		    "layout": "horizontal",
		    "contents": [
						{
				      "type": "button",
				      "action": {
								"type":"postback",
						   "label":"Select this",
						   "data": "{{item['tr_name']}}"
				      }
						}
		    ]
		  }
		}{{ "," if not loop.last }}
		{% endfor %}
  ]
}
